<h1>Prensa</h1>
<hr class="sep"/>
<% if @press_items.total_pages > 1 %>
  <div class="pagination pagination--top">
    <%= will_paginate @press_items, container: false, previous_label: 'Anterior', next_label: 'Siguiente', inner_window: 2, outer_window: 1 %>
  </div>
<% end %>
<div class="grid <%= @press_items.total_pages > 1 ? 'paginated' : ''%>">
  <% @press_items.each_with_index do |item, index| %>
    <div
      class="grid__item"
      @click="openModal(<%= { name: item.name, image_url: item.image.url(:large) }.to_json %>)"
    >
      <%= image_tag(item.image.url(:small), class: 'grid-item__image') %>
      <p class="grid-item__label"><%= item.name %></p>
    </div>
  <% end %>
</div>
<% if @press_items.total_pages > 1 %>
  <div class="pagination pagination--bottom">
    <%= will_paginate @press_items, container: false, previous_label: 'Anterior', next_label: 'Siguiente', inner_window: 2, outer_window: 1 %>
  </div>
<% end %>
