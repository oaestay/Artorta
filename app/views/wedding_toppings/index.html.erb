<hr class="sep"/>
<%= render 'cakes/menu' %>
<%= render 'layouts/search_bar' %>
<% if @wedding_toppings.total_pages > 1 %>
  <div class="pagination pagination--top">
    <%= will_paginate @wedding_toppings, container: false, previous_label: 'Anterior', next_label: 'Siguiente', inner_window: 2, outer_window: 1 %>
  </div>
<% end %>
<div class="grid <%= @wedding_toppings.total_pages > 1 ? 'paginated' : ''%>">
  <% @wedding_toppings.each_with_index do |item, index| %>
    <div
      class="grid__item"
      @click="openModal(<%= {
        name: item.name,
        image_url: item.image.url(:large),
        code: item.code
      }.to_json %>)"

    >
      <%= image_tag(item.image.url(:small), class: 'grid-item__image') %>
      <h4 class="grid-item__label"><%= item.name %></h4>
      <h5 class="grid-item__label">Codigo: <%= item.code %></h5>
      <h6 class="grid-item__label">(Pinche la imagen para ver los precios)</h6>
    </div>
  <% end %>
</div>

<% if @wedding_toppings.total_pages > 1 %>
  <div class="pagination pagination--bottom">
    <%= will_paginate @wedding_toppings, container: false, previous_label: 'Anterior', next_label: 'Siguiente', inner_window: 2, outer_window: 1 %>
  </div>
<% end %>
