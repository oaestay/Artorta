:javascript
  function cycleImages(){
  var images = $('#carrousel span'),
  now    = images.filter(':visible'),
  next   = now.next().length ? now.next() : images.first(),
  speed  = 1500;

  now.fadeOut(speed);
  next.fadeIn(speed);
  }

  $(function() {
  setInterval(cycleImages, 4000);
  var carrousel = $('#carrousel');
  var info = $("#welcome_info");
  var image = $('#carrousel span').filter(':visible').children("img");
  carrousel.height(Math.max(image.height(), info.height()));
  var window = $(window).on('resize ready load', function(){
      $('#carrousel').height(Math.max($('#carrousel span').filter(':visible').children("img").height(), $("#welcome_info").height()));
    }).trigger('resize ready load');
  });
